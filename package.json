{
  "name": "micro-tools",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:supabase": "tsx scripts/test-supabase.ts",
    "test:supabase:coverage": "tsx scripts/test-supabase.ts --coverage",
    "test:supabase:performance": "tsx scripts/test-supabase.ts --performance",
    "test:supabase:full": "tsx scripts/test-supabase.ts --coverage --performance --verbose",
    "test:property": "jest --testPathPatterns=property-based-tests.test.ts --runInBand",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "vercel-build": "next build",
    "supabase:verify": "node scripts/verify-supabase-setup.js",
    "supabase:migrate": "node supabase/migrate.js",
    "supabase:migrate:dry": "node supabase/migrate.js --dry-run",
    "supabase:validate": "node supabase/validate-schema.js",
    "supabase:validate:verbose": "node supabase/validate-schema.js --verbose",
    "migrate": "tsx scripts/migrate.ts",
    "migrate:status": "tsx scripts/migrate.ts --status",
    "migrate:dry-run": "tsx scripts/migrate.ts --dry-run --verbose",
    "migrate:rollback": "tsx scripts/migrate.ts --rollback",
    "migrate:rollback-to": "tsx scripts/migrate.ts --rollback-to",
    "migrate:report": "tsx scripts/migration-report.ts",
    "migrate:report:html": "tsx scripts/migration-report.ts --html",
    "migrate:report:json": "tsx scripts/migration-report.ts --json",
    "env:validate": "tsx scripts/validate-environment.ts",
    "env:validate:dev": "NEXT_PUBLIC_APP_ENV=development tsx scripts/validate-environment.ts",
    "env:validate:staging": "NEXT_PUBLIC_APP_ENV=staging tsx scripts/validate-environment.ts",
    "env:validate:prod": "NEXT_PUBLIC_APP_ENV=production tsx scripts/validate-environment.ts",
    "env:validate:production": "tsx scripts/validate-production-env.ts",
    "env:validate:production:quiet": "tsx scripts/validate-production-env.ts --quiet",
    "deploy:production": "vercel --prod",
    "deploy:prod:full": "tsx scripts/deploy-production.ts",
    "deploy:prod:dry-run": "tsx scripts/deploy-production.ts --dry-run",
    "monitor:post-deploy": "tsx scripts/post-deploy-monitor.ts",
    "monitor:production": "tsx scripts/post-deploy-monitor.ts --url=https://micro-tools.vercel.app --duration=600"
  },
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.90.1",
    "@types/qrcode": "^1.5.6",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "decimal.js": "^10.6.0",
    "framer-motion": "^12.25.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-auth": "^4.24.13",
    "next-intl": "^4.7.0",
    "next-themes": "^0.4.6",
    "papaparse": "^5.5.3",
    "qrcode": "^1.5.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5",
    "zod": "^4.3.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/html2canvas": "^0.5.35",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/papaparse": "^5.5.2",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "jsqr": "^1.4.0",
    "pngjs": "^7.0.0",
    "prisma": "^7.2.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}

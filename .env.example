# Environment variables for PineCalc Website
# Copy this file to .env and fill in your values

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://pinecalc.com"

# Supabase Configuration (Required)
# Get from: https://supabase.com/dashboard/project/[project-id]/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# PostgreSQL Database URL (Required for production)
# For Supabase: Use the connection string from Supabase dashboard
# Format: postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/micro_tools?schema=public"

# NextAuth.js (Required)
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-change-in-production"
NEXTAUTH_URL="https://pinecalc.com"

# Google OAuth (Optional - for social login)
# Get from: https://console.developers.google.com/
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# OpenRouter API (Optional - for AI tools)
# Get from: https://openrouter.ai/
# OPENROUTER_API_KEY=""

# Exa AI API (Optional - for deep topic search)
# Get from: https://exa.ai/
# EXA_API_KEY=""

# NewsAPI (Optional - for fresh news search)
# Get from: https://newsapi.org/register (100 requests/day free)
# NEWSAPI_KEY=""

# Admin Configuration (Required for admin dashboard)
# Comma-separated list of admin email addresses
NEXT_PUBLIC_ADMIN_EMAILS="admin@example.com"